# AMP Webhook Configuration
# Copy this file to .env and update the values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Options: memory, file, postgresql
DATABASE_TYPE=file
DATABASE_URL=postgresql://username:password@localhost:5432/amp_webhook

# AMP Validation
# Set to false to disable signature validation (useful for development)
AMP_VALIDATE_SIGNATURES=true

# Admin Interface
ADMIN_ENABLED=true
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Security
# Add your domain when deploying to production
CORS_ORIGINS=https://mail.google.com,https://outlook.live.com,https://outlook.office.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=true

# Production Settings (uncomment for production)
# NODE_ENV=production
# AMP_VALIDATE_SIGNATURES=true
# ADMIN_PASSWORD=your_secure_password_here
# DATABASE_TYPE=postgresql
# DATABASE_URL=your_production_database_url